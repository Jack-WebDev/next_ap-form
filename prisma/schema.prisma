generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}
model Uploads {
  id            String   @id @default(uuid()) @db.Uuid
  filename      String?
  path          String?
  mimetype      String?
  size          Int?
  nsfasForm     APForm?  @relation(fields: [nsfas_form_id], references: [id])
  nsfas_form_id String?  @db.Uuid
  createdAt     DateTime @default(now()) @db.Timestamp
}

model APForm {
  id                       String    @id @default(uuid()) @db.Uuid
  propertyID               String?
  propertyName             String?
  propertyAddress          String?
  changeType               String?
  changeDescriptionDetails String?
  reasonForChange          String?
  desiredOutcome           String?
  requestorName            String?
  requestorID              String?
  requestorJobTitle        String?
  date                     DateTime?
  priority                 String?
  createdAt                DateTime  @default(now()) @db.Timestamp
  Uploads                  Uploads[]
}
